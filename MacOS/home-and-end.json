{
    "title": "Home and End Remapping",
    "rules": [
        {
            "description": "Home to Command Left, End to Command Right",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "home",
                        "modifiers": {
                            "optional": [
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "modifiers": "command"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "end",
                        "modifiers": {
                            "optional": [
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow",
                            "modifiers": "command"
                        }
                    ]
                }
            ]
        }
    ]
}
